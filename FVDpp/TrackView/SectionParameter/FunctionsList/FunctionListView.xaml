<?xml version="1.0" encoding="UTF-8"?>
<ContentView xmlns="http://xamarin.com/schemas/2014/forms" xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" x:Class="FVD.TrackView.SectionParameter.FunctionsListView">
	<ContentView.Content>
		<StackLayout>
			<Slider />
			<ScrollView Orientation="Horizontal" VerticalOptions="FillAndExpand" HorizontalOptions="FillAndExpand">

				<StackLayout Orientation="Vertical" Spacing="0" x:Name="Functions">

					<StackLayout Spacing="0" Orientation="Horizontal" HeightRequest="30">
						<BoxView WidthRequest="100" BackgroundColor="Blue" Margin="0, 0,0 ,0">
						</BoxView>
						<BoxView WidthRequest="200" BackgroundColor="Red" Margin="0, 0,0 ,0">
						</BoxView>
						<BoxView WidthRequest="100" BackgroundColor="Blue" Margin="0, 0,0 ,0">
						</BoxView>
					</StackLayout>
					
				</StackLayout>
				

				
			</ScrollView>
		</StackLayout>
	</ContentView.Content>
</ContentView>